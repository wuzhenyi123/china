<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.china.mapper.TbUserMapper">

    <resultMap id="BaseResultMap" type="com.china.domain.TbUser">
            <id property="id" column="id" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="phoneNum" column="phone_num" jdbcType="VARCHAR"/>
            <result property="userName" column="user_name" jdbcType="VARCHAR"/>
            <result property="password" column="password" jdbcType="VARCHAR"/>
            <result property="realName" column="real_name" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,create_time,update_time,
        phone_num,user_name,password,
        real_name
    </sql>
    <select id="getUserByUserId" resultType="com.china.domain.TbUser">
        select <include refid="Base_Column_List"/>
            from tb_user where user_id = #{userId}
    </select>
    <select id="getMenuCodeByUserId" resultType="java.lang.String">
        SELECT DISTINCT
            m.menu_id,
            m.parent_id,
            m.menu_name,
            m.path,
            m.component,
            m.`query`,
            m.visible,
            m.STATUS,
            ifnull( m.perms, '' ) AS perms,
            m.is_frame,
            m.is_cache,
            m.menu_type,
            m.icon,
            m.order_num,
            m.create_time
        FROM
            tb_menu m
                LEFT JOIN tb_role_menu rm ON m.menu_id = rm.menu_id
                LEFT JOIN sys_user_role ur ON rm.role_id = ur.role_id
                LEFT JOIN sys_role ro ON ur.role_id = ro.role_id
        WHERE
            ur.user_id = '2';

    </select>
</mapper>
